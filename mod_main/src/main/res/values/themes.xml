<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SumTea" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="style_mine_service">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_58</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_222427</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:drawablePadding">@dimen/dp_4</item>
        <item name="android:paddingTop">@dimen/dp_6</item>
        <item name="android:layout_marginTop">@dimen/dp_6</item>
        <item name="android:paddingBottom">@dimen/dp_6</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>